{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
 <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">E-Learning Formation</h1>
        <p class="lead text-body-secondary">
        E-Learning Formation, la formation accessible à tous, 
        partout et à tout moment.
        </p>
        <p>
          <a href="#" class="btn btn-primary my-2">Toutes les formations</a>
          <a href="#" class="btn btn-secondary my-2">A propos de E-Learning</a>
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-body-tertiary">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {% for cours in cours %}
        <div class="col">
          <div class="card shadow-sm">
            <img width="100%" height="225" src="{{ asset('uploads/' ~ cours.image) }}" alt="{{ cours.titre }}">
            <div class="card-body">
            <h5 class="card-title">{{ cours.titre }}</h5>
              <p class="card-text">
                {{ cours.description| raw }}...
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="{{path('app_cours_show',{'slug': cours.slug })}}" class="btn btn-sm btn-outline-secondary">Voir</a>
                  {% if app.user and "ROLE_ADMIN" in app.user.roles %}
                  <button type="button" class="btn btn-sm btn-outline-secondary">Modifier</button>
                  {% endif %}
                </div>
                <small class="text-body-secondary">9 mins</small>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>

{% endblock %}
